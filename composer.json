{
    "name": "porthou/password",
    "description": "Comprehensive composable password validation",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Anthony Porthouse",
            "email": "anthony@porthou.se"
        },
        {
            "name": "Anthony Porthouse",
            "email": "anthony.porthouse@groundsix.com"
        }
