    "require-dev": {
        "phpunit/phpunit": "^6.1|^7.0",
        "php-coveralls/php-coveralls": "^2.0",
        "roave/security-advisories": "dev-master",
        "php-http/mock-client": "^1.1",
        "phpstan/phpstan": "^0.10.5",
        "php-http/curl-client": "^1.7"
    }
